<div class='row'>
  <div class='col-md-12'>
    <div class='panel panel-body'>
      <%= form_for @idea, url: root_path do  |f| %>
        <%= f.text_field :title, placeholder: "Title" %>
        <%= f.text_area :body, placeholder: "Description" %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
